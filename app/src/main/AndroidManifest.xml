<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badran.badranaudioplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:name="ApplicationClass"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAudioPlayer"
        android:fullBackupContent="true">
        <activity
            android:name="AlbumDetails"
            android:exported="true" />
        <activity
            android:name="PlayerActivity"
            android:exported="true" />
        <activity
            android:name="MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="MusicService" android:enabled="true"/>

        <receiver android:name="NotificationReceiver" android:enabled="true"
            android:exported="true"
            android:permission="@string/app_name">
            <intent-filter>
                <action android:name="actionPrevious"/>
                <action android:name="actionNex"/>
                <action android:name="actionPlay"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>